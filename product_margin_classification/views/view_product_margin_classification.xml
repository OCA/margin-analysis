<odoo>

    <record id="action_view_product_template_by_margin_classification" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
        <field name="view_id" ref="view_product_template_tree"/>
    </record>

    <record id="view_product_margin_classification_tree" model="ir.ui.view">
        <field name="model">product.margin.classification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="profit_margin"/>
                <field name="template_too_cheap_qty"/>
                <field name="template_too_expensive_qty"/>
                <field name="template_qty"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </tree>
        </field>
    </record>

    <record id="view_product_margin_classification_form" model="ir.ui.view">
        <field name="model">product.margin.classification</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="apply_theoretical_price" type="object" string="Apply Theoretical Price"
                            attrs="{'invisible': [('template_incorrect_price_qty', '=', 0)]}"/>
                    <button name="apply_theoretical_price_too_cheap" type="object" string="Up to Theoretical Price"
                            attrs="{'invisible': [('template_too_cheap_qty', '=', 0)]}"/>
                    <button name="apply_theoretical_price_too_expensive" type="object" string="Down to Theoretical Price"
                            attrs="{'invisible': [('template_too_expensive_qty', '=', 0)]}"/>
                </header>
                <sheet>
                    <div class="oe_right oe_button_box" style="width: 300px;" name="buttons">
                        <button name="%(action_view_product_template_by_margin_classification)d"
                            type="action" class="oe_stat_button oe_inline" icon="fa-list"
                            context="{'search_default_margin_classification_id': active_id}"
                            attrs="{'invisible': [('template_qty', '=', 0)]}">
                            <field name="template_qty" widget="statinfo" string="Products"/>
                        </button>

                        <button name="%(action_view_product_template_by_margin_classification)d" 
                            type="action" class="oe_stat_button oe_inline" icon="fa-check-square"
                            context="{'search_default_margin_classification_id': active_id,
                                'search_default_filter_margin_correct': True}"
                            attrs="{'invisible': [('template_correct_price_qty', '=', 0)]}">
                            <field name="template_correct_price_qty" widget="statinfo" string="Correct"/>
                        </button>

                        <button name="%(action_view_product_template_by_margin_classification)d" 
                            type="action" class="oe_stat_button oe_inline" icon="fa-square"
                            context="{'search_default_margin_classification_id': active_id,
                                'search_default_filter_margin_incorrect': True}"
                            attrs="{'invisible': [('template_incorrect_price_qty', '=', 0)]}">
                            <field name="template_incorrect_price_qty" widget="statinfo" string="Incorrect"/>
                        </button>

                        <button name="%(action_view_product_template_by_margin_classification)d" 
                            type="action" class="oe_stat_button oe_inline" icon="fa-minus-square"
                            context="{'search_default_margin_classification_id': active_id,
                                'search_default_filter_margin_too_cheap': True}"
                            attrs="{'invisible': [('template_too_cheap_qty', '=', 0)]}">
                            <field name="template_too_cheap_qty" widget="statinfo" string="Too Cheap"/>
                        </button>

                        <button name="%(action_view_product_template_by_margin_classification)d" 
                            type="action" class="oe_stat_button oe_inline" icon="fa-plus-square"
                            context="{'search_default_margin_classification_id': active_id,
                                'search_default_filter_margin_too_expensive': True}"
                            attrs="{'invisible': [('template_too_expensive_qty', '=', 0)]}">
                            <field name="template_too_expensive_qty" widget="statinfo" string="Too Priced"/>
                        </button>

                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group col="4">
                        <field name="company_id" groups="base.group_multi_company"/>
                    </group>
                    <notebook>
                        <page string="Settings">
                            <group col="4" string="Computation Method">
                                <label for="profit_margin"/>
                                <div>
                                    <field name="profit_margin" class="oe_inline"
                                        attrs="{'required': True}"/>
                                    <label string="%" class="oe_inline"/>
                                </div>
                                <label for="markup"/>
                                <div>
                                    <field name="markup" class="oe_inline"/>
                                    <label string="%" class="oe_inline"/>
                                </div>
                                <field name="price_round"/>
                                <field name="price_surcharge"/>
                            </group>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="action_product_margin_classification" model="ir.actions.act_window">
        <field name="name">Margin Classifications</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.margin.classification</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_product_margin_classification"
        parent="sales_team.menu_sale_config"
        action="action_product_margin_classification"
        sequence="5"/>

</odoo>
